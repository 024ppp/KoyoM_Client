<?xml version="1.0" encoding="utf-8"?>
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.administrator.koyom_client.MainActivity">

        <!-- <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"/>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:weightSum="1">

            <!-- 網・枠 -->
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblWaku7"
                    android:text="７枠"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtWaku7"
                    style="@style/EditTextStyle" />
            </LinearLayout>
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblAmi6"
                    android:text="６網"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtAmi6"
                    style="@style/EditTextStyle" />
            </LinearLayout>
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblWaku5"
                    android:text="５枠"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtWaku5"
                    style="@style/EditTextStyle" />
            </LinearLayout>
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblAmi4"
                    android:text="４網"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtAmi4"
                    style="@style/EditTextStyle" />
            </LinearLayout>
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblWaku3"
                    android:text="３枠"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtWaku3"
                    style="@style/EditTextStyle" />
            </LinearLayout>
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblAmi2"
                    android:text="２網"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtAmi2"
                    style="@style/EditTextStyle" />
            </LinearLayout>
            <LinearLayout
                style="@style/LinearLayoutStyle">
                <TextView
                    android:id="@+id/lblWaku1"
                    android:text="１枠"
                    style="@style/TextViewStyle"/>
                <EditText
                    android:id="@+id/txtWaku1"
                    style="@style/EditTextStyle" />
            </LinearLayout>

            <TextView
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:gravity="top"
                android:textColor="#FF0000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="クリア" />

                <Button
                    android:id="@+id/btnUpd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="登録" />
            </LinearLayout>
            <EditText
                android:id="@+id/txtHoge"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>